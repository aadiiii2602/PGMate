<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity"
    android:background="@drawable/welcome_background"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/welcome_logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Welcome "
            android:textSize="35sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:fontFamily="@font/amarante"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_marginTop="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hey there ! ðŸŒŸ Iâ€™m super excited to welcome you to PGMate.
Think of me as your guide in this journey. I am here to make your experience amazing."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:fontFamily="@font/amarante"
            android:textStyle="normal"
            android:textAllCaps="true"
            android:layout_marginTop="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnWelcomeLogin"
                android:text ="LOGIN"
                android:textColor="@color/black"
                android:background="@drawable/login_button_color"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="10sp"
                android:fontFamily="@font/amarante"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnWelcomeSignUp"
                android:text ="SIGN UP"
                android:textColor="@color/black"
                android:background="@drawable/login_button_color"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10sp"
                android:fontFamily="@font/amarante"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>